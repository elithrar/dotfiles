[user]
    name = Matt Silverlock
    email = "matt@eatsleeprepeat.net"
[core]
    editor = "code --wait"
    excludesfile = ~/.gitignore
    fileMode = false
[diff]
    tool = vscode
[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE
[push]
    default = simple
[rebase]
    autosquash = true
[log]
    decorate = true
    pretty = oneline
[credential]
    helper = osxkeychain
[alias]
    pf = push --force-with-lease
    pr = "!f() { git fetch origin pull/$1/head:$2; }; f"
    yolo = push --force-with-lease
