[user]
	name = Charlie Gleason
	email = hi@charliegleason.com
	signingkey = ~/.ssh/id_ed25519.pub
[github]
	user = superhighfives
[core]
	excludesfile = ~/.gitignore_global
	editor = code --wait
	pager = delta --dark 2>/dev/null || cat
	fileMode = false
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = ~/.ssh/allowed_signers
[commit]
	gpgsign = true
[tag]
	gpgsign = true
[push]
	default = current
	autoSetupRemote = true
[pull]
	rebase = false
[fetch]
	prune = true
[init]
	defaultBranch = main
[merge]
	conflictStyle = zdiff3
[diff]
	algorithm = histogram
	colorMoved = default
[rebase]
	autosquash = true
[rerere]
	enabled = true
[branch]
	sort = -committerdate
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[color]
	ui = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[credential]
	helper = osxkeychain
[ghi]
	token = !security find-internet-password -a superhighfives -s github.com -l 'ghi token' -w
[alias]
	pf = push --force-with-lease
	co = checkout
