[user]
    name = Matt Silverlock
    email = "matt@eatsleeprepeat.net"
[core]
    editor = "zed --wait"
    excludesfile = ~/.gitignore
    fileMode = false
    # https://notes.takashiidobe.com/tools/git/delta
    pager = "pre=$(which delta); ${pre:-cat} | less --tabs=4 -RFX"
[push]
    default = simple
    autoSetupRemote = true
[fetch]
    prune = true
[merge]
    conflictStyle = zdiff3
[diff]
    algorithm = histogram
    colorMoved = default
[rerere]
    enabled = true
[branch]
    sort = -committerdate
[column]
    ui = auto
[rebase]
    autosquash = true
[log]
    decorate = true
    pretty = oneline
[credential]
    helper = osxkeychain
[alias]
    pf = push --force-with-lease
    pr = "!f() { git fetch origin pull/$1/head:$2; }; f"
    rebase-main = "!f() { git fetch origin main && git rebase origin/main; }; f"
[pull]
    rebase = true
[init]
    defaultBranch = main
[include]
	path = /Users/matt/.local/share/cloudflare-warp-certs/gitconfig
[includeIf "hasconfig:remote.*.url:*gitlab.cfdata.org*"]
    path = ~/.gitconfig-cloudflare
