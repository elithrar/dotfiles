{
  "$schema": "https://opencode.ai/config.json",
  "theme": "orng",
  "autoupdate": true,
  "instructions": ["{env:HOME}/.config/opencode/INSTRUCTIONS.md"],
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"],
      "enabled": false
    },
    "cloudflare-docs": {
      "type": "remote",
      "url": "https://docs.mcp.cloudflare.com/mcp"
    },
    "google-workspace": {
      "type": "remote",
      "url": "https://google-workspace-mcp.cto.cfdata.org/mcp",
      "oauth": {},
      "enabled": false
    },
    "cloudflare-builds": {
      "type": "remote",
      "url": "https://builds.mcp.cloudflare.com/mcp",
      "oauth": {},
      "enabled": false
    },
    "cloudflare-observability": {
      "type": "remote",
      "url": "https://observability.mcp.cloudflare.com/mcp",
      "oauth": {},
      "enabled": false
    }
  },
  "agent": {
    "write": {
      "description": "reviews, edits and drafts longer-form content in my voice.",
      "model": "anthropic/claude-opus-4-5",
      "mode": "primary",
      "color": "#F5B638",
      "permission": {
        "bash": "deny"
      },
      "prompt": "You review, edit, and draft longer-form prose. Use the imperative mood. Prefer AP style and American English. Avoid marketing speak - no 'perfect for', 'empowers you to', or 'modernization'. Em-dashes are OK; semi-colons less so. Be concise and avoid walls of text. Lead with the problem or context before the solution. Use 'we' for collaboration; 'you' to address the reader. Keep paragraphs short - 2-4 sentences max. Explain why, not just what. Link liberally to sources, docs, and references. Use bullet points over numbered lists unless order matters. Be direct and opinionated; acknowledge tradeoffs honestly. Use bold for key phrases that anchor an argument. Reframe complex points to aid readers in comprehension. Use rhetorical questions sparingly to drive a point home."
    }
  },
  "permission": {
    "webfetch": "allow",
    "doom_loop": "ask",
    "read": {
      "*": "allow",
      "*.env": "deny",
      "*.env.*": "deny",
      "*.dev.vars": "deny",
      "*.env.example": "allow"
    },
    "edit": {
      "*": "allow"
    },
    "external_directory": {
      "*": "ask",
      "~/repos/**": "allow"
    },
    "bash": {
      "*": "ask",
      // Git
      "git status *": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "git branch *": "allow",
      "git show *": "allow",
      "git stash list *": "allow",
      "git remote *": "allow",
      "git fetch *": "allow",
      "git add *": "allow",
      "git commit *": "allow",
      "git checkout *": "allow",
      "git switch *": "allow",
      "git merge *": "allow",
      "git clone *": "allow",
      "git pull *": "allow",
      "git init *": "allow",
      "git worktree *": "allow",
      "git rebase *": "allow",
      "git push *": "allow",
      "git reset --soft *": "allow",
      "git reset --hard *": "deny",
      "git push --force *": "deny",
      "ls *": "allow",
      "cat *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "find *": "allow",
      "rg *": "allow",
      "which *": "allow",
      "pwd": "allow",
      "echo *": "allow",
      "mkdir *": "allow",
      "cp *": "allow",
      "mv *": "allow",
      "rm *": "ask",
      "rm -rf *": "deny",
      "pnpm *": "allow",
      "npm *": "allow",
      "npx *": "allow",
      "node *": "allow",
      "bun *": "allow",
      "gh pr list *": "allow",
      "gh pr view *": "allow",
      "gh pr diff *": "allow",
      "gh pr checks *": "allow",
      "gh pr status *": "allow",
      "gh issue list *": "allow",
      "gh issue view *": "allow",
      "gh issue status *": "allow",
      "gh repo view *": "allow",
      "gh api *": "allow",
      "gh search *": "allow",
      "gh pr create *": "allow",
      "gh pr merge *": "ask",
      "gh pr close *": "ask",
      "gh issue create *": "allow",
      "gh issue close *": "ask",
      "lsof *": "allow",
      "kill *": "ask",
      "wrangler *": "allow",
      // Additional commands based on install.sh CLI utilities
      "jq *": "allow",
      "bat *": "allow",
      "fd *": "allow",
      "fzf *": "allow",
      "delta *": "allow",
      "htop *": "allow",
      "tree *": "allow",
      "curl *": "allow",
      "wget *": "allow",
      "go *": "allow",
      "rustc *": "allow",
      "cargo *": "allow",
      "python *": "allow",
      "python3 *": "allow",
      "pip *": "allow",
      "pip3 *": "allow",
      "pipx *": "allow",
      "uv *": "allow",
      "ruff *": "allow",
      "ruby *": "allow",
      "make *": "allow",
      "cmake *": "allow",
      "shellcheck *": "allow",
      "jj *": "allow",
      // glab (GitLab CLI) - mirror gh patterns
      "glab mr list *": "allow",
      "glab mr view *": "allow",
      "glab mr diff *": "allow",
      "glab mr checkout *": "allow",
      "glab issue list *": "allow",
      "glab issue view *": "allow",
      "glab repo view *": "allow",
      "glab auth *": "allow",
      "glab mr create *": "allow",
      "glab mr merge *": "ask",
      "glab mr close *": "ask",
      "glab issue create *": "allow",
      "glab issue close *": "ask",
      "mkcert *": "allow",
      "age *": "allow",
      "stow *": "allow",
      "tmux *": "allow",
      "nvim *": "allow",
      "zoxide *": "allow",
      "atuin *": "allow",
      "asciinema *": "allow",
      "agg *": "allow",
      "gifski *": "allow",
      "ffmpeg *": "allow",
      "websocat *": "allow",
      "nmap *": "ask",
      "cloudflared *": "allow",
      "pscale *": "allow",
      "yarn *": "allow",
      "wrk *": "allow",
      "try *": "allow",
      // Docker
      "docker *": "allow",
      "docker-compose *": "allow",
      // macOS utilities
      "brew *": "allow",
      "open *": "allow",
      "pbcopy": "allow",
      "pbpaste": "allow",
      "source *": "allow",
      // Ruby toolchain
      "rbenv *": "allow",
      "gem *": "allow",
      "bundle *": "allow",
      // Shell
      "omz *": "allow"
    }
  }
}
